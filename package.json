{
  "name": "avaron",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "test:renderer": "node cli.js test/common/*.test.js test/renderer/*.test.js --renderer",
    "test:main": "node cli.js test/common/*.test.js test/main/*.test.js",
    "test:renderer-update": "npm run test:renderer -- -u",
    "test:main-update": "npm run test:main -- -u",
    "test": "run-s test:renderer test:main",
    "test:update": "run-s test:renderer-update test:main-update"
  },
  "repository": "https://github.com/bokuweb/avaron",
  "keywords": [
    "ava",
    "test",
    "electron",
    "snapshot",
    "screenshot"
  ],
  "author": "bokuweb",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-react": "^7.0.0",
    "material-ui": "^0.20.2",
    "npm-run-all": "^4.1.5",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-tap-event-plugin": "^3.0.3",
    "react-test-renderer": "^16.7.0",
    "reg-suit": "^0.7.17",
    "xo": "^0.24.0"
  },
  "xo": {
    "ignores": [
      "test/**"
    ],
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "no-use-extend-native/no-use-extend-native": "off"
    }
  },
  "ava": {
    "babel": {
      "testOptions": {
        "presets": [
          "@babel/preset-react"
        ]
      }
    },
    "require": [],
    "windowOptions": {
      "title": "avaron",
      "show": true
    },
    "fixture": "./fixture.html"
  },
  "dependencies": {
    "ava": "^1.1.0",
    "electron": "^4.0.2",
    "make-dir": "^1.3.0",
    "require-hacker": "^3.0.1"
  },
  "bin": {
    "avaron": "./cli.js"
  }
}
