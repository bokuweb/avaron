{
  "name": "avaron",
  "version": "0.0.13",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "test:renderer": "node cli.js test/common/*.test.js test/renderer/*.test.js --renderer",
    "test:main": "node cli.js test/common/*.test.js test/main/*.test.js",
    "test:renderer-update": "npm run test:renderer -- -u",
    "test:main-update": "npm run test:main -- -u",
    "test": "run-s test:renderer test:main",
    "test:update": "run-s test:renderer-update test:main-update"
  },
  "repository": "https://github.com/bokuweb/avaron",
  "keywords": [
    "ava",
    "test",
    "electron",
    "snapshot",
    "screenshot"
  ],
  "author": "bokuweb",
  "license": "MIT",
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "material-ui": "^0.19.1",
    "npm-run-all": "^4.1.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-tap-event-plugin": "^2.0.1",
    "react-test-renderer": "^15.6.1",
    "reg-suit": "^0.5.2",
    "xo": "^0.18.2"
  },
  "xo": {
    "ignores": [
      "test/**"
    ],
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "no-use-extend-native/no-use-extend-native": "off"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  },
  "avaron": {
    "babel": "inherit",
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "windowOptions": {
      "title": "avaron"
    },
    "fixture": "./fixture.html"
  },
  "dependencies": {
    "ava": "^0.22.0",
    "electron": "^1.7.6",
    "make-dir": "^1.0.0"
  },
  "bin": {
    "avaron": "./cli.js"
  }
}
